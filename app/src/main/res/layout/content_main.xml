        <TextView

            android:id="@+id/today_celebrates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="today celebrates..."
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <CheckBox
                android:id="@+id/show_all_checkbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="setContentOfListView"
                android:padding="6dp"
                android:text="Show all" />

            <CheckBox
                android:id="@+id/show_birthday_checkbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="setContentOfListView"
                android:padding="6dp"
                android:text="Birthdays" />

            <CheckBox
                android:id="@+id/show_nameday_checkbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="setContentOfListView"
                android:padding="6dp"
                android:text="Namedays" />
        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This lists shows you following "
                android:textAlignment="center" />

            <TextView
                android:id="@+id/showsDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xx days"
                android:textAlignment="center" />


        <ListView
            android:id="@+id/lstview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>


    </LinearLayout>

</LinearLayout>